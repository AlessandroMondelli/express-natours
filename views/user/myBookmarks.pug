extends account 

block dashboard 
  .my-bookmarks
    .card-container
      each bookmark in bookmarks 
        .card 
          .card__header 
            .card__picture 
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${bookmark.imageCover}` alt=`Cover image of ${bookmark.name}`)
            h3.heading-tertirary 
              span= bookmark.name 

          .card__footer 
            a.btn.btn--green.btn--small(href=`/tour/${bookmark.slug}`) Details