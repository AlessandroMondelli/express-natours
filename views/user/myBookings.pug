extends account

block dashboard 
  .my-bookings
    .card-container
      each tour in tours
        .card 
          .card__header 
            .card__picture 
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${tour.imageCover}` alt=`Cover image of ${tour.name}`)
            h3.heading-tertirary 
              span= tour.name 

          .card__footer 
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details