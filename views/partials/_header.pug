header.header 
  nav.nav.nav--tours
    a.nav__el(href='/') All tours 
  .header__logo 
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user 
    if user
      //- Da visualizzare solo su login
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
        span= user.username
      a.nav__el.nav__el--logout Logout
    else
      a.nav__el.nav__el(href='/login') Login
      a.nav__el.nav__el--cta(href='/sign-up') Sign up